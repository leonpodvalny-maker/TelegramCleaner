{
  "name": "telegram-cleaner",
  "version": "1.0.0",
  "description": "Telegram Cleaner - Manage and delete your Telegram messages",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build-installer": "electron-builder --win"
  },
  "keywords": ["telegram", "cleaner", "messages"],
  "author": "Telegram Cleaner",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.telegramcleaner.app",
    "productName": "Telegram Cleaner",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "portable": {
      "artifactName": "TelegramCleaner-Portable.exe"
    },
    "files": [
      "electron-main.js",
      "telegram-cleaner-modern.html"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
