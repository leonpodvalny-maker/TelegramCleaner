{
  "name": "telegram-cleaner",
  "version": "1.0.0",
  "description": "Telegram Cleaner - Manage and delete your Telegram messages",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "server": "node backend-server.js",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --dir",
    "build-portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable",
    "build-installer": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win"
  },
  "keywords": [
    "telegram",
    "cleaner",
    "messages"
  ],
  "author": "Telegram Cleaner",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^4.22.1",
    "prebuilt-tdlib": "^0.1008060.0",
    "tdl": "^8.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.telegramcleaner.app",
    "productName": "Telegram Cleaner",
    "asar": true,
    "win": {
      "target": "dir"
    },
    "files": [
      "electron-main.js",
      "telegram-cleaner-modern.html",
      "telegram-cleaner-demo.html",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/tdl/**/*.node",
      "node_modules/prebuilt-tdlib/**/*",
      "node_modules/@prebuilt-tdlib/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
