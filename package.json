{
  "name": "telegram-cleaner",
  "version": "1.0.0",
  "description": "Beautiful Telegram message cleaner with modern UI",
  "main": "index.js",
  "scripts": {
    "build": "mkdir -p www && cp -r *.html www/ && cp README.md www/ 2>/dev/null || true",
    "cap:init": "npx cap init \"Telegram Cleaner\" com.telegramcleaner.app --web-dir www",
    "cap:add:android": "npx cap add android",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:build:release": "cd android && ./gradlew assembleRelease"
  },
  "keywords": [
    "telegram",
    "cleaner",
    "messages",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "typescript": "^5.9.3"
  }
}
